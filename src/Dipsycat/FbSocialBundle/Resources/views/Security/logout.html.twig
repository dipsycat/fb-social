{% extends 'DipsycatFbSocialBundle::layout.html.twig' %}
{% block title %}
    Logout
{% endblock %}
{% block body %}
    {{ parent() }}

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Logout</h3>
                    </div>
                    <div class="panel-body">
                        {% if error %}
                            <div class="error">{{ error.message }}</div>
                        {% endif %}
                        <a href="{{ path('_security_logout') }}" class="btn btn-lg btn-success btn-block" name="logout">
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}