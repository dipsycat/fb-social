{% extends 'DipsycatFbSocialBundle::layout.html.twig' %}
{% block title %}
    Friends
{% endblock %}
{% block wrapper %}
    {{ parent() }}
    <div class="row">
        {% for friend in friends %}
            <div class="col-lg-3 col-md-4">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-9">
                                <div class="huge">{{ friend.username }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

