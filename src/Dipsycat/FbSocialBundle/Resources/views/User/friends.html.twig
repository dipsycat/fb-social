{% extends 'DipsycatFbSocialBundle::layout.html.twig' %}
{% block title %}
    Friends
{% endblock %}
{% block wrapper %}
    {{ parent() }}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Friends</h1>
        </div>
        {% for friend in friends %}
            <div class="col-lg-3 col-md-4">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-9">
                                <div class="huge">{{ friend.username }}</div>
                            </div>
                        </div>
                    </div>
                    <a href="{{ path('dipsycat_fb_social_friend_remove', {id: friend.id}) }}" class="remove-friend">
                        <div class="panel-footer">
                            <span class="pull-left">Remove</span>
                            <span class="pull-right"><i class="fa fa-ban"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('a.remove-friend').click(function (e) {
                var href = $(this).attr('href');
                $.ajax({
                    url: href,
                    type: "post",
                    done: function (data) {
                        //@todo
                    },
                });

                e.preventDefault();
            });
        });
    </script>

{% endblock %}