{% extends 'DipsycatFbSocialBundle::layout.html.twig' %}
{% form_theme form 'form/form_errors.html.twig' %}
{% block title %}
    Registration
{% endblock %}
{% block navigation %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Registration</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="form-group">
                            {{ form_row(form.username) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.surname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.plainPassword.second) }}
                        </div>

                        <button class="btn btn-lg btn-success btn-block" type="submit">Registration</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row text-center">
            <a href="{{ path('_security_login') }}">Login</a>
        </div>
        <div class="row text-center">
            <a href="{{ path('connect_facebook') }}">Login with Facebook</a>
        </div>
    </div>
{% endblock %}